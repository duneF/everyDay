<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="taotao" version="2.5">
    <display-name>FortunePortlet</display-name>

    <description>Automated generated Application Wrapper</description>

    <servlet>
        <servlet-name>taotao-service</servlet-name>
        <display-name>taotao-service Portlet</display-name>
        <description>Generated Portlet Wrapper</description>
        <servlet-class>org.apache.pluto.core.PortletServlet</servlet-class>

        <init-param>
            <param-name>portlet-class</param-name>
            <param-value>com.tao.taotao-service</param-value>
        </init-param>

        <init-param>
            <param-name>portlet-guid</param-name>
            <param-value>yourportlet.taotao-service</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>taotao-service</servlet-name>
        <url-pattern>/taotao-service/*</url-pattern>
    </servlet-mapping>

    <taglib>
        <taglib-uri>http://java.sun.com/portlet</taglib-uri>
        <taglib-location>/WEB-INF/tld/portlet.tld</taglib-location>
    </taglib>
</web-app>
